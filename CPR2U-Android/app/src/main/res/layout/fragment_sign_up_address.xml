<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.auth.SignUpAddressFragment">

        <TextView
            android:id="@+id/tv_login_check_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/notosans_bold"
            android:text="Select your Address"
            android:textColor="@color/black"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_login_check_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:text="Select your address for CPR Angel activities"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_login_check_title"
            app:layout_constraintTop_toBottomOf="@id/tv_login_check_title" />

        <TextView
            android:id="@+id/tv_sido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_border_gray_radius_6dp"
            android:fontFamily="@font/notosans_regular"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            android:text="시 / 도"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_check_subtitle" />


        <TextView
            android:id="@+id/tv_gugun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_border_gray_radius_6dp"
            android:fontFamily="@font/notosans_regular"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            android:text="구 / 군"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_sido" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="26dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rectangle_fill_red_radius_100dp"
            android:fontFamily="@font/notosans_bold"
            android:gravity="center"
            android:text="@string/signup_continue"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>